#!/bin/bash
#
#  hbcucoind The hbcucoin server.
#
#
# chkconfig: 345 80 20
# description: hbcucoind
# processname: hbcucoind
#

# Source function library.
. /etc/init.d/functions

# you can override defaults in /etc/sysconfig/hbcucoind, see below
if [ -f /etc/sysconfig/hbcucoind ]; then
        . /etc/sysconfig/hbcucoind
fi

RETVAL=0

prog=hbcucoind
# you can override the lockfile via BITCOIND_LOCKFILE in /etc/sysconfig/hbcucoind
lockfile=${BITCOIND_LOCKFILE-/var/lock/subsys/hbcucoind}

# hbcucoind defaults to /usr/bin/hbcucoind, override with BITCOIND_BIN
bitcoind=${BITCOIND_BIN-/usr/bin/hbcucoind}

# hbcucoind opts default to -disablewallet, override with BITCOIND_OPTS
bitcoind_opts=${BITCOIND_OPTS}

start() {
    echo -n $"Starting $prog: "
    daemon $DAEMONOPTS $bitcoind $bitcoind_opts
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && touch $lockfile
    return $RETVAL
}

stop() {
    echo -n $"Stopping $prog: "
    killproc $prog
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && rm -f $lockfile
    return $RETVAL
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status $prog
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: service $prog {start|stop|status|restart}"
        exit 1
        ;;
esac
